<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="overview">
        <h2 class="text-center">Enter your gig details</h2>
        <br />
        <div class="new-gig-card">
          <form method="POST">
            <div class="form-group">
              <label>Gig Title</label>
              <input type="text" class="form-control" placeholder="I will do something" name="gig_title">
            </div>
            <div class="form-group">
              <label>Gig Price</label>
              <input type="text" class="form-control" placeholder="NRS 3000" name="gig_price">
            </div>
            <div class="form-group">
              <label>Gig Category</label>
              <select class="form-control" name="gig_category">
                <option>Programming</option>
                <option>Website</option>
                <option>Design</option>
                <option>Marketing</option>
              </select>
            </div>
            <div class="form-group input-group-lg">
              <label>Gig About</label>
              <input type="text" class="form-control" placeholder="Description about gig" name="gig_about">
            </div>
            <button type="submit" class="btn btn-success btn-lg">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
